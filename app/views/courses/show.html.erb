<h2><%= @title %></h2>
<%
students = Student.where(activated: true).to_a
students_in_course = @course.students.to_a
students |= students_in_course

# make a hash which maps school_id to arrays of student objects.
school_to_students = {}
School.where(activated: true).each do |school|
  students_at_school = students.select { |student| student.school_id == school.id }
  school_to_students[school.id] = students_at_school.map { |student| student.attributes.to_h }
end
students_in_course = students_in_course.map { |student| student.id }
#school_to_students.keys.each { |key| school_to_students[key] = school_to_students[key].html_safe }
%>
<script>
  school_to_students = JSON.parse("<%== escape_javascript(school_to_students.to_json) %>")
  students_in_course = JSON.parse("<%== escape_javascript(students_in_course.to_json) %>")
</script>
<%= render '/shared/error_messages', object: @course %>
<%= form_for @course, remote: true do |course_f| %>
<div class="all-block">
  <%= course_f.label :name %>
  <%= course_f.text_field :name %>
  <%= course_f.label :start_date %>
  <%= course_f.date_field :start_date, value: Date.today %>
  <%= course_f.label :end_date %>
  <%= course_f.date_field :end_date %>
  <%= course_f.label :notes %>
  <%= course_f.text_area :notes %>
  <%= course_f.label :teacher %>
  <%= course_f.collection_select :user_id, Teacher.where(activated: true), :id, :name, { prompt: true } %>
  <%= course_f.label :school %>
  <%= course_f.collection_select :school_id, School.where(activated: true), :id, :name, { prompt: true }, { onchange: "show_students()" } %>
</div>
<div id="student_list_container" class="hidden">
  <ul id="student_list" class="student_list"></ul>
</div>
  <br>
  <%= course_f.submit %>
<% end %>
<script>
function show_students() {
  let school_id = $("#course_school_id").val()
  if (!school_id) return
  let student_list = $("#student_list")
  student_list.empty()
  school_to_students[school_id].forEach(student => student_list.append(student_checkbox(student)))
  $("#student_list_container").show()
}
function student_checkbox(student) {
  let id = student.id
  let first_name = student.first_name
  let last_name = student.last_name
  let checked = students_in_course.includes(id) ? "checked" : ""
  return `<li><input type="checkbox" value="${id}" name="course[student_ids][]" id="course_student_ids_${id}" ${checked}><label for="course_student_ids_${id}">${first_name} ${last_name}</label></li>`
}
$(function() {
  show_students();
})
</script>